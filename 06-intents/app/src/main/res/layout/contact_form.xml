<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".ContactFormActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_person"/>
        <EditText
            android:id="@+id/first_name_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.ContactForm.EditText"
            android:hint="@string/first_name_hint"/>
    </LinearLayout>
    <EditText
        android:id="@+id/last_name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/icon_width"
        style="@style/AppTheme.ContactForm.EditText"
        android:hint="@string/last_name_hint"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/edit_text_margin_bottom">
        <ImageView
            android:id="@+id/phone_icon"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            style="@style/AppTheme.ImageView"
            android:src="@drawable/ic_phone_black_24dp"/>
        <EditText
            android:id="@+id/phone_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            style="@style/AppTheme.ContactForm.EditText"
            android:hint="@string/phone_hint"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/edit_text_margin_bottom">

        <ImageView
            android:id="@+id/email_icon"
            style="@style/AppTheme.ImageView"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:src="@drawable/ic_email_black_24dp" />
        <EditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint"
            style="@style/AppTheme.ContactForm.EditText"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/edit_text_margin_bottom">
        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:src="@drawable/ic_place_black_24dp"
            style="@style/AppTheme.ImageView"/>
        <EditText
            android:id="@+id/address_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.ContactForm.EditText"
            android:hint="@string/address_hint"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/edit_text_margin_bottom">
        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:src="@drawable/ic_public_black_24dp"
            style="@style/AppTheme.ImageView"/>
        <EditText
            android:id="@+id/website_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme.ContactForm.EditText"
            android:hint="@string/website_hint" />
    </LinearLayout>


<Button
    android:id="@+id/save_contact_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/save_button_label"
    style="@style/AppTheme.ContactForm.Button"/>
</LinearLayout>